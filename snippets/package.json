{
  "name": "custom-snippets",
  "displayName": "Custom Language Snippets",
  "description": "Custom language snippets for Neovim",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.11.0"
  },
  "contributes": {
    "snippets": [
      {
        "language": "c",
        "path": "./c/snippets.json"
      },
      {
        "language": ["javascriptreact", "typescriptreact"],
        "path": "./jsx/snippets.json"
      },
      {
        "language": ["javascript", "typescript"],
        "path": "./javascript/snippets.json"
      },
      {
        "language": "python",
        "path": "./python/snippets.json"
      },
      {
        "language": ["bash", "sh", "shellscript"],
        "path": "./bash/snippets.json"
      }
    ]
  }
}
